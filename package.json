{
  "name": "server-devices",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://gitlab.com/lklpay-devs/server-devices.git",
  "author": "Daniel Rojas <danielrojas1032@gmail.com>",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "start": "tsc && node dist/index.js",
    "build": "tsc",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/application/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@routes/(.*)$": "<rootDir>/src/routes/$1",
      "^@consumers/(.*)$": "<rootDir>/src/consumers/$1",
      "^@producers/(.*)$": "<rootDir>/src/producers/$1"
    }
  },
  "_moduleAliases": {
    "@app": "dist/application",
    "@controllers": "dist/controllers",
    "@routes": "dist/routes",
    "@consumers": "dist/consumers",
    "@producers": "dist/producers"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.0.3",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "kafkajs": "^2.2.4",
    "mjml": "^4.15.3",
    "module-alias": "^2.2.2",
    "mongodb": "^5.1.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-appwrite": "^8.2.0",
    "nodemailer": "^6.9.3",
    "pdfkit": "^0.17.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.8",
    "@types/json2csv": "^5.0.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mjml": "^4.7.4",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.8",
    "@types/pdfkit": "^0.14.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "*"
  }
}
